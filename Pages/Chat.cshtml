@page
@model ChatModel
@{
    ViewData["Title"] = "Chat with Advisor";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                    <h4 class="mb-0">
                        <i class="bi bi-robot me-2"></i>AI Academic Advisor
                    </h4>
                </div>
                <div class="card-body">
                    <div class="chat-messages mb-3" id="chatMessages" style="height: 500px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 8px; padding: 1rem; background: #f8f9fa;">
                        @if (Model.Messages.Count == 0)
                        {
                            <div class="text-center text-muted py-5">
                                <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                                <p class="mt-3">Start a conversation with your AI advisor!</p>
                                <p class="small">Ask about courses, degree requirements, or academic planning.</p>
                            </div>
                        }
                        else
                        {
                            @foreach (var message in Model.Messages)
                            {
                                <div class="message @message.Role mb-3 @(message.Role == "user" ? "text-end" : "")">
                                    <div class="d-inline-block p-3 rounded @(message.Role == "user" ? "text-white" : "bg-white border")"
                                         style="max-width: 80%; @(message.Role == "user" ? "background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);" : "")">
                                        <div class="message-content" style="white-space: pre-wrap;">@message.Content</div>
                                        <div class="message-time small mt-1 @(message.Role == "user" ? "text-white-50" : "text-muted")">
                                            @message.Timestamp.ToString("h:mm tt")
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <form method="post" class="d-flex gap-2">
                        <input type="text"
                               asp-for="UserMessage"
                               class="form-control"
                               placeholder="Ask about courses, requirements, or degree planning..."
                               required />
                        <button type="submit" class="btn btn-primary" style="min-width: 100px;">
                            <i class="bi bi-send me-1"></i>Send
                        </button>
                    </form>

                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Responses are AI-generated. Always verify important information with official sources.
                        </small>
                        <form method="post" asp-page-handler="Clear" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash me-1"></i>Clear Chat
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll to bottom of chat
        var chatMessages = document.getElementById('chatMessages');
        if (chatMessages) {
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        // Auto-focus input after page load
        window.addEventListener('load', function() {
            var input = document.querySelector('input[name="UserMessage"]');
            if (input && !input.value) {
                input.focus();
            }
        });
    </script>
}