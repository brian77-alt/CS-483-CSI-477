@page
@model CS_483_CSI_477.Pages.ChatModel
@{
    ViewData["Title"] = "Chat with Advisor";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">

            <div class="card shadow-sm">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                    <h4 class="mb-0">
                        <i class="bi bi-robot me-2"></i>AI Academic Advisor
                    </h4>
                </div>

                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    @if (!string.IsNullOrEmpty(Model.LoadedStudentSummary))
                    {
                        <div class="alert alert-success" style="white-space: pre-wrap;">
                            <strong>Student loaded from database:</strong>
                            @Model.LoadedStudentSummary
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            Student progress is not loaded. Make sure you are logged in and your account matches a student in the database.
                        </div>
                    }

                    <div class="chat-messages mb-3" id="chatMessages"
                         style="height: 500px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 8px; padding: 1rem; background: #f8f9fa;">

                        @if (Model.Messages.Count == 0)
                        {
                            <div class="text-center text-muted py-5">
                                <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                                <p class="mt-3">Start a conversation with your AI advisor!</p>
                                <p class="small">Ask about courses, degree requirements, or academic planning.</p>
                            </div>
                        }
                        else
                        {
                            @foreach (var message in Model.Messages)
                            {
                                <div class="message @message.Role mb-3 @(message.Role == "user" ? "text-end" : "")">
                                    <div class="d-inline-block p-3 rounded @(message.Role == "user" ? "text-white" : "bg-white border")"
                                         style="max-width: 80%; @(message.Role == "user" ? "background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);" : "")">
                                        <div class="message-content" style="white-space: pre-wrap;">@message.Content</div>
                                        <div class="message-time small mt-1 @(message.Role == "user" ? "text-white-50" : "text-muted")">
                                            @message.Timestamp.ToString("h:mm tt")
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <form method="post" enctype="multipart/form-data" class="d-flex flex-column gap-2">
                        <div>
                            <label class="form-label mb-1">Upload Academic Plan (PDF)</label>
                            <input type="file" asp-for="UploadedPdf" class="form-control" accept=".pdf" />
                            @if (!string.IsNullOrEmpty(Model.PdfFileName))
                            {
                                <div class="small text-success mt-1">
                                    Loaded PDF: <strong>@Model.PdfFileName</strong>
                                </div>
                            }
                        </div>

                        <div class="d-flex gap-2">
                            <input type="text"
                                   asp-for="UserMessage"
                                   class="form-control"
                                   placeholder="Ask about courses, requirements, or degree planning..."
                                   required />
                            <button type="submit" class="btn btn-primary" style="min-width: 100px;">
                                <i class="bi bi-send me-1"></i>Send
                            </button>
                        </div>
                    </form>

                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            AI-generated responses. Verify with official sources.
                        </small>

                        <div class="d-flex gap-2">
                            <form method="post" asp-page-handler="RemovePdf" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-file-earmark-x me-1"></i>Remove PDF
                                </button>
                            </form>

                            <form method="post" asp-page-handler="Clear" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash me-1"></i>Clear Chat
                                </button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        var chatMessages = document.getElementById('chatMessages');
        if (chatMessages) chatMessages.scrollTop = chatMessages.scrollHeight;

        window.addEventListener('load', function () {
            var input = document.querySelector('input[name="UserMessage"]');
            if (input && !input.value) input.focus();
        });
    </script>
}