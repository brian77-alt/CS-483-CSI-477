@page
@model PlannerModel
@{
    ViewData["Title"] = "Course Planner";
}

<div class="container mt-4">
    <h2>Course Planner</h2>
    <p class="text-muted">Plan your academic courses semester by semester</p>

    <div class="row mt-4">
        <!-- Planner Controls -->
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5>Planner Tools</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="studentId" class="form-label">Student ID</label>
                            <input type="text" class="form-control" id="studentId" placeholder="Enter student ID">
                        </div>
                        <div class="col-md-3">
                            <label for="majorSelect" class="form-label">Major</label>
                            <select class="form-select" id="majorSelect">
                                <option selected>Select major</option>
                                <option value="cs">Computer Science</option>
                                <option value="math">Mathematics</option>
                                <option value="engineering">Engineering</option>
                                <option value="business">Business</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="startYear" class="form-label">Start Year</label>
                            <input type="number" class="form-control" id="startYear" placeholder="2024" value="2024">
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button class="btn btn-primary w-100">Load Plan</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Academic Plan -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Academic Plan</h5>
                    <div>
                        <button class="btn btn-success btn-sm me-2">Save Plan</button>
                        <button class="btn btn-secondary btn-sm">Export PDF</button>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Year 1 -->
                    <div class="mb-4">
                        <h5 class="mb-3">Year 1 (2024-2025)</h5>
                        <div class="row">
                            <!-- Fall Semester -->
                            <div class="col-md-6 mb-3">
                                <div class="card border-primary">
                                    <div class="card-header bg-primary text-white">
                                        <h6 class="mb-0">Fall 2024</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="badge bg-secondary">Total Credits: 0</span>
                                            <button class="btn btn-sm btn-outline-primary">Add Course</button>
                                        </div>
                                        <div class="alert alert-light" role="alert">
                                            No courses planned yet
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Spring Semester -->
                            <div class="col-md-6 mb-3">
                                <div class="card border-success">
                                    <div class="card-header bg-success text-white">
                                        <h6 class="mb-0">Spring 2025</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="badge bg-secondary">Total Credits: 0</span>
                                            <button class="btn btn-sm btn-outline-success">Add Course</button>
                                        </div>
                                        <div class="alert alert-light" role="alert">
                                            No courses planned yet
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                   