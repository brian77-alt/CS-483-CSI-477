@page
@model StudentDashboardModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container mt-4">
    <h2>Student Dashboard</h2>

    <div class="row mt-4">
        <!-- Chat Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Chat</h5>
                </div>
                <div class="card-body">
                    <p>Chat with AI Academic Advisor</p>
                    <a href="/Chat" class="btn btn-primary">Start Chat</a>
                </div>
            </div>
        </div>

        <!-- Plan Viewer Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Plan Viewer</h5>
                </div>
                <div class="card-body">
                    <p>View your academic plan</p>
                    <a href="/Planner" class="btn btn-primary">View Plan</a>
                </div>
            </div>
        </div>

        <!-- Progress Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Progress</h5>
                </div>
                <div class="card-body">
                    <p>Track your progress</p>
                    <a href="/Progress" class="btn btn-primary">View Progress</a>
                </div>
            </div>
        </div>
