@page
@model StudentDashboardModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container mt-4">
    <h2>Student Dashboard</h2>
    
    <div class="row mt-4">
        <!-- Chat Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Chat</h5>
                </div>
                <div class="card-body">
                    <p>Chat with AI Academic Advisor</p>
                    <button class="btn btn-primary">Start Chat</button>
                </div>
            </div>
        </div>
        
        <!-- Plan Viewer Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Plan Viewer</h5>
                </div>
                <div class="card-body">
                    <p>View your academic plan</p>
                    <button class="btn btn-primary">View Plan</button>
                </div>
            </div>
        </div>
        
        <!-- Progress Section -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Progress</h5>
                </div>
                <div class="card-body">
                    <p>Track your progress</p>
                    <button class="btn btn-primary">View Progress</button>
                </div>
            </div>
        </div>
    </div>
</div>