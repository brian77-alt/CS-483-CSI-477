@page
@model IndexModel
@{
    ViewData["Title"] = "AI Academic Advisor";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1>AI Academic Advisor</h1>
        <p>Welcome to your academic planning assistant</p>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Course Planning</h5>
                    <p class="card-text">Plan your courses and track requirements</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">AI Advice</h5>
                    <p class="card-text">Get personalized academic recommendations</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Progress Tracking</h5>
                    <p class="card-text">Monitor your degree progress</p>
                </div>
            </div>
        </div>
    </div>
</div>