@page
@model IndexModel
@{
    ViewData["Title"] = "AI Academic Advisor";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">AI Academic Advisor</h1>
        <p class="lead mb-4">Your intelligent companion for academic success</p>
    </div>
</div>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2 class="text-center mb-4">What We Offer</h2>

                <div class="mb-4">
                    <h4>Smart Course Planning</h4>
                    <p class="text-muted">Plan your entire academic journey with intelligent course recommendations and prerequisite tracking.</p>
                </div>

                <div class="mb-4">
                    <h4>Progress Tracking</h4>
                    <p class="text-muted">Monitor your degree completion, GPA, and requirements in real-time.</p>
                </div>

                <div class="mb-4">
                    <h4>AI-Powered Guidance</h4>
                    <p class="text-muted">Get personalized academic advice and answers to your questions from our intelligent chatbot.</p>
                </div>
            </div>
        </div>
    </div>
</section>

