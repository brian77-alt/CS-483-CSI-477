@page
@model AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}
<div class="container mt-4">
    <h2>Admin Dashboard</h2>

    <!-- Database Connection Status -->
    <div class="alert @(Model.IsConnected ? "alert-success" : "alert-danger") mt-3" role="alert">
        @if (Model.IsConnected)
        {
            <i class="bi bi-check-circle"></i> 
            @Model.ConnectionMessage
        }
        else
        {
            <i class="bi bi-x-circle"></i> 
            @Model.ErrorMessage
        }
    </div>

    @if (!string.IsNullOrEmpty(Model.SearchMessage))
    {
        <div class="alert alert-info mt-2">
            @Model.SearchMessage
        </div>
    }

    <div class="row mt-4">
        <!-- Uploads Section -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Uploads</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Upload" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">Upload File</label>
                            <input type="file" class="form-control" name="uploadedFile">
                        </div>
                        <button type="submit" class="btn btn-success">Upload</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Student Lookup Section -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Student Lookup</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Search">
                        <div class="mb-3">
                            <label class="form-label">Student ID</label>
                            <input type="text" class="form-control" placeholder="Enter student ID"
                                   asp-for="StudentId">
                        </div>
                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Student Results Section -->
    @if (Model.StudentResults != null && Model.StudentResults.Rows.Count > 0)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Search Results</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        @foreach (System.Data.DataColumn column in Model.StudentResults.Columns)
                                        {
                                            <th>@column.ColumnName</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (System.Data.DataRow row in Model.StudentResults.Rows)
                                    {
                                        <tr>
                                            @foreach (var item in row.ItemArray)
                                            {
                                                <td>@item</td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>